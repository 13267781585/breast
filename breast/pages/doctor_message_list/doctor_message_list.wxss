.meg_bg_top {
  width: 100%;
  display: inline-block;
  position: relative;
  z-index: 0;
	height: 300rpx;
	margin-bottom: 20rpx;

}
.message_list>.msg-item {
	border-radius: 5rpx;	/*设置边框圆角 上下左右外边距*/
	margin-top: 20rpx;
	margin-bottom: 20rpx;
	margin-left: 15rpx;
	margin-right: 15rpx;
  border: 1rpx solid #ddd;
	position: relative;
	/* padding-top: 30rpx;设置内边距 */
	padding: 10rpx;
	/* padding-right: 100rpx; */
	height: 175rpx;
	/* width: 400; */
	/* background: #ADFF2F; */
	background-color: var(--white);
	/* display: flex;	弹性盒布局 */
	/* justify-content: flex-start; */
	align-items: center;  /*居中对齐弹性盒的各项*/
}
.chat_head{
	height: 120rpx;
	width: 120rpx;
	overflow:hidden;
}
.img_head{
	margin-left:15rpx;
	display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
	margin-top: 25rpx;
	height: 150rpx;
	width: 150rpx;
}

.context{
	float: left;
	padding: 10rpx;
	width: 100%;
	height: 25px;
	background: #E6E6FA;
}

.msg_txk{
	margin-top: 15rpx;
	margin-left: 25rpx;
	height: 120rpx;
	width: 120rpx;
	float: left;
	background: rgb(151, 18, 18);
	border: 10rpx;
}

.msg_content{
	float: left;
	height: 120rpx;
	width: 400rpx;
	margin: 15rpx;
	border: 10rpx;
	/* background:	#98FB98; */
}
.msg_right{
	height: 140rpx;
	width: 100rpx;
	float: right;
	border: 10rpx;
	/* background: rgb(22, 151, 18); */
}

.content_username{
	margin-left:5rpx;
	font-size:35rpx;
	font-weight: 700;
}
.content_msg{
	margin-top: 35rpx;
	flex-direction: row;
	font-size:30rpx;
	overflow: hidden;/*超出一行自动隐藏*/
	text-overflow: ellipsis;/*在文字后面添加省略号*/
	white-space: nowrap;/*强制不换行*/
}
.msg_date{
	flex-direction: row;
}

.red_circle{
	/* padding-bottom: 15rpx; */
	position: absolute;
	right: -15rpx;
  top: -15rpx;
  width: 35rpx;
  height: 35rpx;
  line-height: 45rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 50%;
  background-color: red;
	color: white;
	border-width:200rpx;
	/* border-color:	#4a0fb8; */
	font-weight: 600;
	border: rgb(161, 233, 26);
  border-style: solid;
  border-width: 1px;
}